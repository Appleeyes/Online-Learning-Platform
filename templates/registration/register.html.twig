{% extends 'base.html.twig' %}

{% block title %}Register
{% endblock %}

{% block main_content %}
	<div class="home">
		<div class="home_background_container prlx_parent">
			<div class="home_background prlx" style="background-image:url({{ asset('images/course_2.jpg') }})"></div>
		</div>
		<div class="home_content">
			<h1>Registration Form</h1>
		</div>
	</div>
	{% for flash_error in app.flashes('verify_email_error') %}
		<div class="alert alert-danger" role="alert">{{ flash_error }}</div>
	{% endfor %}

	<div class="container mt-5 mb-5">
		<h3 style="text-align: center;">Please input your credentials</h3>

		{{ form_errors(registrationForm) }}

		{{ form_start(registrationForm) }}
        {{ form_row(registrationForm.fullname) }}
		{{ form_row(registrationForm.username) }}
		{{ form_row(registrationForm.email) }}
		{{ form_row(registrationForm.plainPassword, {
            label: 'Password'
        }) }}
		{{ form_row(registrationForm.agreeTerms) }}

        <span style="display: block;">Already have an account? <a href="{{ path('app_login') }}">Login</a></span>
		<button type="submit" class="btn btn-success">Register</button>
		{{ form_end(registrationForm) }}
	</div>
{% endblock %}
