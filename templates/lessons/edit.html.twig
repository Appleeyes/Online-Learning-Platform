{% extends 'base.html.twig' %}

{% block title %}Edit Lessons
{% endblock %}

{% block body %}
	<!-- Home -->

	<div class="home">
		<div class="home_background_container prlx_parent">
			<div class="home_background prlx" style="background-image:url({{ asset('images/course_2.jpg') }})"></div>
		</div>
		<div class="home_content">
			<h1>Edit {{ lesson.title }}</h1>
		</div>
	</div>
	<div class="container mt-5 mb-5">
		{{ include('lessons/_form.html.twig', {'button_label': 'Update'}) }}
		<div class="row">
			<div class="col text-end">
				<a class="btn btn-primary" href="{{ path('app_courses_show', {'id': lesson.course.id}) }}">Back to list</a>
			</div>
			<div class="col-auto">
				{{ include('lessons/_delete_form.html.twig') }}
			</div>
		</div>
	</div>
{% endblock %}
